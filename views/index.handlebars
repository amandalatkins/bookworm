<div class="container">
    <div class="row">
        <div class="col-12 col-lg-6">
            <h3>To Read Pile <span class="count to-read"></span></h3>
            <hr>
            <div class="row read-pile">

                {{#each books}}
                    {{#unless isRead}}
                        <div class="col-6 col-md-6 col-lg-4 py-3">
                            <div class="card h-100 book" data-title="{{name}}" style="background-image:url({{cover}})">
                                <div class="card-body text-center h-100 pb-0">
                                    {{!-- <p class="card-subtitle mb-2">({{name}})</p> --}}
                                    {{!-- <h5 class="card-title">{{name}}</h5> --}}
                                    {{!-- <p class="mb-0"><a href="{{link}}" target="_blank">Learn More</a></p> --}}
                                </div>
                                {{!-- <p>
                                <a href="{{link}}" target="_blank" class="btn btn-light"><i class="fas fa-info"></i></a>
                                <button class="btn btn-light m-3 read-me" data-id="{{id}}"><i class="fas fa-check"></i></button>
                                </p> --}}
                                <div class="btn-group btn-group-sm" role="group">
                                    <a href="{{link}}" target="_blank" class="btn btn-light" data-id="">Info</a>
                                    <button type="button" class="btn btn-light read-me" data-id="1">Read!</button>
                                </div>
                            </div>

                        </div>
                    {{/unless}}
                {{else}}
                    <div class="col-6 col-md-6 col-lg-4 py-3">
                            <div class="card h-100 book no-books">
                                <div class="card-body text-center h-100 pb-0">
                                    <p class="card-subtitle mb-2">!</p>
                                    <h5 class="card-title">No Books Yet</h5>
                                    <p class="mb-0"></p>
                                </div>
                                <button class="btn btn-light m-3" data-toggle="modal" data-target="#addModal">Add One!</button>
                            </div>
                    </div>
                {{/each}}

            </div>
        </div>
        <div class="col-12 col-lg-6">
            <h3>Done Pile <span class="count done"></span></h3>
            <hr class="pb-3">
            <div class="row done-pile">
                {{#each books}}
                    {{#if isRead}}
                        <div class="col-12 pb-2">
                            <div class="card book read">
                                <div class="card-body" style="padding: 0.75rem 1.25rem">

                                    <table class="w-100">
                                        <tr>
                                            <td class="done-title"><span class="align-middle"><img src="{{cover}}"/> {{name}}</span></td>
                                            <td class="done-buttons">    
                                                <div class="btn-group btn-group-sm" role="group" aria-label="Basic example">
                                                    <button type="button" class="btn btn-secondary read-me-again" data-id="{{id}}">Read Again</button>
                                                    <button type="button" class="btn btn-secondary delete-me" data-id="{{id}}">Delete</button>
                                                </div>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                    {{/if}}                
                {{/each}}
            </div>
        </div>
    </div>
</div>